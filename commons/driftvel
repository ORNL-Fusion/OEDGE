c     -*-Fortran-*-
c
c     This common block holds the data related to the parallel 
c     drift velocity options. 
c
c
      common /driftvel_com/
     >       CPDRFT,CDRFTV,drft_region,
     >       cdrftv_start,cdrftv_end,
     >       pol_drftv,
!     >       imp_drftvel,bg_drftvel,
     >       sdrft_start,sdrft_end,
     >       ndrftvel,drftvel_machopt,
     >       drft_distopt,
     >       ringdrftvel,ringcs  
      save /driftvel_com/
c
!      real IMP_DRFTVEL,BG_DRFTVEL,
      real pol_drftv(maxnrs)
      real sdrft_start(maxnrs),sdrft_end(maxnrs)
c
      real CDRFTV,cdrftv_start,cdrftv_end
c
      integer CPDRFT,drft_region,drft_distopt
c
      integer ndrftvel,drftvel_machopt
c
      real ringdrftvel(maxnrs,2),ringcs(maxnrs)
c
      common /drifts/
     >      potopt,exb_rad_opt,exb_pol_opt,
     >      osmpot2,exb_rad_drft,exb_pol_drft,
     >      e_pol,e_rad
c     >      ,osmpotcell
      integer potopt,exb_rad_opt,exb_pol_opt
      real osmpot2(0:maxnks+1,maxnrs),
     >     exb_rad_drft(maxnks,maxnrs),exb_pol_drft(maxnks,maxnrs),
     >     e_pol(maxnks,maxnrs),e_rad(maxnks,maxnrs)
c     >     ,osmpotcell(5,maxnks*maxnrs)
