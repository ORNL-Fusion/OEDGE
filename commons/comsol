c     -*-Fortran-*-
C                                                                       
C     COMMON BLOCKS FOR SOURCE FUNCTIONS                                
C                                                                       
      COMMON /SETINFOP/ PLENSRC,PLAMSRC,P0OUT,P0IN,                     
     >                  radint,radinti                                  
      save /SETINFOP/
      DOUBLE PRECISION  PLENSRC,PLAMSRC,P0OUT,P0IN,radint,radinti       
c
      COMMON /SETINFO/ LENSRC,LAMSRC,FACSRC,S0OUT,S0IN,                 
     >                 FIZ,S0AIN,S0AOUT,S0BIN,S0BOUT,                   
     >                 ionint,ioninti                                   
      save /SETINFO/
      DOUBLE PRECISION LENSRC,LAMSRC,FACSRC,S0OUT,S0IN,                 
     >                 FIZ,S0AIN,S0AOUT,S0BIN,S0BOUT,                   
     >                 ionint,ioninti                                   
c
      COMMON /SRCINFO/ FNORM,FNORMI,IRN,TSS,MAXIK,TMAXS                 
      save /SRCINFO/
      INTEGER IRN,MAXIK                                                 
      REAL TSS(MAXNKS),TMAXS                                            
      DOUBLE PRECISION FNORM,FNORMI                                     
c
      common /lastinfo/ sionl,sradl,                                    
     >                  iionl,iradl,ipeil,speil,                        
     >                  pionl,pradl,ppeil                               
      save /lastinfo/
      double precision sionl,sradl,iionl,iradl,speil,ipeil              
      integer pionl,pradl,ppeil                                         
C                                                                       
