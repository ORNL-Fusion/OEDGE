#!/bin/tcsh 
#
# ======================================================================
# Build all of the excutables for FUSE
# ======================================================================
#
set BUILD_ALL = no
set MAKE_ARG  = none

if ($#argv == 2) set MAKE_ARG = $2

switch ( $1 )
  case "all":
    set BUILD_ALL = yes
  case "osm":
    cd $FUSEHOME/src/osm
    if ($MAKE_ARG  != "none") make $MAKE_ARG ; make
    if ($BUILD_ALL == "no"  ) breaksw
  case "eirene":
    cd $FUSEHOME/src/eirene07
    if ($MAKE_ARG  != "none") make $MAKE_ARG ; make
    if ($BUILD_ALL == "no"  ) breaksw
  case "cortex":
    cd $FUSEHOME/idl
    idl cortex_build.pro
    if ($BUILD_ALL == "no"  ) breaksw
  case "triangle":
    cd $FUSEHOME/src/triangle
    if ($MAKE_ARG  == "clean") make distclean ; make
    breaksw
  default:
    echo ERROR fuse_make script: arguments not understood
    breaksw
endsw

