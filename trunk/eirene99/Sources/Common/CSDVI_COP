*COMDECK CSDVI_COP
      PARAMETER (NCPV_STAT=(NCPV+NPLS+2)*NSWIT+1)
      PARAMETER (NSCOP=NCPV_STAT*(NRADS+1))
      COMMON /CSDVI_COP/
     .  SIGMA_COP,SGMS_COP,
     .  STV_COP,STVS_COP,
     .  SDVIA_COP,EE_COP,EES_COP,
     .  NCPVI_STAT
      DIMENSION
     .  SIGMA_COP(NCPV_STAT,NRADS),SGMS_COP(NCPV_STAT)
      DIMENSION
     .  STV_COP(NCPV_STAT,NRADS),STVS_COP(NCPV_STAT)
      DIMENSION
     .  SDVIA_COP (NCPV_STAT,NRADS),EE_COP(NCPV_STAT,NRADS),
     .  EES_COP(NCPV_STAT)
