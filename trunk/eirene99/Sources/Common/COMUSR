*COMDECK COMUSR
      PARAMETER (NPLPR1=(5+5*NPLS+NAIN)*NRAD,
     P           NPLPRM=NPLPR1+(1+1*NPLS+NSPZMC)*NRAD,
     P           NSFPRM=2*NLMPGS,
     P           NPLPR2=(2+2*NPLS)*NRAD+3*(NATM+NMOL+NION+NPLS)+4+NSPZ,
     P           NUSR=NPLPRM+NPLPR2+NSFPRM,
     P           MUSR=4*NATM+4*NMOL+5*NION+3*NPLS+22+NSPZ+
     P                5*(1+NATMP)*(1+NMOLP)*(1+NIONP)*(1+NPLSP)+NSPZ*5,
     P           LUSR=NRAD*(NPLS+2)+NRAD)
      COMMON /COMUSR/
C  NPLPRM, REAL. THE FIRST NPLPR1 DATA ARE SET IN SUBROUTINE PLASMA
     R TEIN,TIIN,DEIN,DIIN,VXIN,VYIN,VZIN,
     R BXIN,BYIN,BZIN,ADIN,EDRIFT,
     R VOL,WGHT,
C  NSFPRM
     R FLXOUT(NLMPGS),SAREA(NLMPGS),
C  NPLPR2, REAL
     R TEINL,TIINL,DEINL,DIINL,
     R RMASSI(NION),RMASSA(NATM),RMASSM(NMOL),RMASSP(NPLS),
     R DIOD  (NION),DATD  (NATM),DMLD  (NMOL),DPLD  (NPLS),
     R DION  (NION),DATM  (NATM),DMOL  (NMOL),DPLS  (NPLS),
     R TVAC,DVAC,VVAC,ALLOC,
     T TEXTS(NSPZ),
C  MUSR, INTEGER
     I NSPA  ,NATMI,NATMIM,NMASSA,NCHARA,
     I        NFOLA,NGENA,
     I NSPAM ,NMOLI,NMOLIM,NMASSM,NCHARM,
     I        NFOLM,NGENM,
C  LUSR, LOGICAL
c slmod begin - f90
     I NSPAMI,NIONI,NIONIM,NMASSI,NCHARI,NCHRGI,NFOLI,NGENI,
     I NSPTOT,NPLSI,NPLSIM,NMASSP,NCHARP,NCHRGP,NBITS,
     I NSNVI,NCPVI,NADVI,NBGVI,NALVI,NCLVI,NADSI,NALSI,NAINI,NPRT(NSPZ),
     I ISPEZ(0:4,0:NATMP,0:NMOLP,0:NIONP,0:NPLSP),ISPEZI(NSPZ,0:4),
     L LGVAC,LGDFT
      COMMON /COMUSR2/
c
c     I NSPAMI,NIONI,NIONIM,NMASSI,NCHARI,NCHRGI,
c     I        NFOLI,NGENI,
c     I NSPTOT,NPLSI,NPLSIM,NMASSP,NCHARP,NCHRGP,NBITS,
c     I NSNVI,NCPVI,NADVI,NBGVI,NALVI,NCLVI,NADSI,NALSI,NAINI,
c     I NPRT(NSPZ),
c     I ISPEZ(0:4,0:NATMP,0:NMOLP,0:NIONP,0:NPLSP),
c     I ISPEZI(NSPZ,0:4),
c     L LGVAC,LGDFT,
c slmod end
C FROM HERE ON: NO EQUIVALENCE
     I IADVE(NADV),IADVS(NADV),IADVT(NADV),IADRC(NADV),
     I ICLVE(NCLV),ICLVS(NCLV),ICLVT(NCLV),ICLRC(NCLV),
     I ISNVE(NSNV),ISNVS(NSNV),ISNVT(NSNV),ISNRC(NSNV),
     I ICPVE(NCPV),ICPVS(NCPV),ICPVT(NCPV),ICPRC(NCPV),
     I IBGVE(NBGV),IBGVS(NBGV),IBGVT(NBGV),IBGRC(NBGV),
     I IADSE(NADS),IADSS(NADS),IADST(NADS),IADSC(NADS),
     I NMACH,NMODE,NTCPU,NFILE,NFILEN,NFILEM,NFILEL,NFILEK,NFILEJ,
     I NITER,IITER,NTIME,ITIMV,NFRSTP(NTALI),NADDP(NTALI),
     I NSPAN(NTALV),NSPEN(NTALV)
C
      DIMENSION
     R TEIN(NRAD),TIIN(NPLS,NRAD),DEIN(NRAD),DIIN(NPLS,NRAD),
     R VXIN(NPLS,NRAD),VYIN(NPLS,NRAD),VZIN(NPLS,NRAD),
     R BXIN(NRAD),BYIN(NRAD),BZIN(NRAD),ADIN(NAIN,NRAD),VOL(NRAD),
     R WGHT(NSPZMC,NRAD),
     R TEINL(NRAD),TIINL(NPLS,NRAD),EDRIFT(NPLS,NRAD),
     R DEINL(NRAD),DIINL(NPLS,NRAD)
       CHARACTER*8
     T TEXTS
      DIMENSION
     I NMASSA(NATM),NCHARA(NATM),NFOLA(NATM),NGENA(NATM),
     I NMASSM(NMOL),NCHARM(NMOL),NFOLM(NMOL),NGENM(NMOL),
     I NMASSP(NPLS),NCHARP(NPLS),NCHRGP(NPLS),
     I NMASSI(NION),NCHARI(NION),NCHRGI(NION),
     I NFOLI(NION),NGENI(NION)
      LOGICAL
     L LGVAC(NRAD,0:NPLS+1),LGDFT(NRAD)
