c     -*-Fortran-*-
c
c     BAFFLES
c
c     This common block contains the declarations for the variables that
c     contain information about any baffles that are defined in the input 
c     grid file. If appropriate and possible - these baffles are incorporated
c     into the vessel wall for use in DIVIMP.
c
c     The variable names were chosen to match those in use in EDGE2D/NIMBUS
c
c
      common /baffles/ nbufle,rbufle,zbufle,nbufmx,nbufx,rbufx,zbufx,
     >                 node_origin,nvesorg,rvesorg,zvesorg,wallredef
      save /baffles/
c
      integer nbufle,nbufmx,nbufx(mbufx),node_origin(mves,2),nvesorg
      integer wallredef
c
      real    rbufle(mbufle),zbufle(mbufle)
      real    rbufx(mbufx,mbufle),zbufx(mbufx,mbufle)
      real    rvesorg(mves),zvesorg(mves)         




