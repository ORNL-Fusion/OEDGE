c     -*-Fortran-*-
c
      common /div6c/ 
     >  DACT,DPARAS,DSUM4,
     >  DSUM1,DSUM2,DSUM3,DIZ,DOUTS,
     >  cistiz,cistfp,cist,cistot,cismax,
     >  cist_recstart,cist_elapsed,
     >  coreouts, 
     >  incore, inedge, inmsol, indiv, intrap,  
     >  tmpncore,tmpiz,
     >  num_entered_core,
     >  debug0,debug_all,
     >  sdvs2,
     >  sdvs3,
     >  sdvb,
     >  sdtimp
      save /div6c/

      DOUBLE PRECISION DACT,DPARAS(MAXIZS,6),DSUM4
      DOUBLE PRECISION DSUM1,DSUM2,DSUM3,DIZ,DOUTS(MAXIZS,9)
c
c     For some reason - the count of particle time steps was recorded
c     as double precision - however - the variable cist was the 
c     one used everywhere in the code calculations - this doesn't 
c     make sense - if a DP is required for accuracy then it would
c     have to be used everywhere for it to make sense - so for now
c     I am using the single precision cist everywhere. 
c
c      double precision dista
c
c      double precision distacc
c      real             cistacc,cistlast
c      logical          cisterr
c      integer          cisterrcnt 
c
c     DIVIMP timing variables which record particle timesteps 
c     - switch to double precision for all ion time step accumulation to 
c       enable precise timing for long lived particles
c     - for a typical case with a time step on the order of 1.0e-7 seconds
c       a real variable can accurately accumulate just about 1s of 
c       particle lifetime - occasionally this has been found to be 
c       insufficient. Since neutrals exist for a shorter length of time
c       typically - this switch to double precision has not yet been made
c       for the neutral transport modules. 
c
c
c      real      cistiz,cistfp,cist,cistot,cismax,cist_recstart,cist_elapsed
c
      real*8      cistiz,cistfp,cist,cistot,cismax,
     >            cist_recstart,cist_elapsed
c
      double precision coreouts(maxizs,9) 
c
c     Logical variables for detecting regions
c
      logical incore, inedge, inmsol, indiv, intrap  
      real tmpncore,tmpiz
      real num_entered_core
c
c     DEBUGGING FLAG: Hard coded
c
      logical debug0,debug_all
c
c     Array to record ion velocities. (RIV)
c
c     moved to (dynam3) real   sdvs(maxnks,maxnrs,-1:maxizs)
c
      real   sdvs2(maxnks,maxnrs,-1:maxizs)
      real   sdvs3(maxnks,maxnrs,-1:maxizs,2)
      real   sdvb (maxnks,maxnrs)
      real   sdtimp(maxnks,maxnrs,-1:maxizs)
