*COMDECK CSTEP
      PARAMETER (NSTPP=(NPLS*NGITT*5+NGITT*2+
     P                 (NSPZ+1)*(NGITT+1))*NSTEP,
     P           MSTPP=(6*NGITT+4)*NSTEP)
      COMMON /CSTEP/

     R FLSTEP(0:NSPZ,NSTEP,NGITT),FLTOT(0:NSPZ,NSTEP),
     R TESTEP(NSTEP,NGITT),TISTEP(NPLS,NSTEP,NGITT),
     R RRSTEP(NSTEP,NGITT),VXSTEP(NPLS,NSTEP,NGITT),
     R VYSTEP(NPLS,NSTEP,NGITT),VZSTEP(NPLS,NSTEP,NGITT),
     R DISTEP(NPLS,NSTEP,NGITT),

     I IRSTEP(NSTEP,NGITT),IPSTEP(NSTEP,NGITT),ITSTEP(NSTEP,NGITT),
     I IASTEP(NSTEP,NGITT),IBSTEP(NSTEP,NGITT),IGSTEP(NSTEP,NGITT),
     I ISTUF(NSTEP),
     I NSMAX(NSTEP),NSPSTI(NSTEP),NSPSTE(NSTEP)
