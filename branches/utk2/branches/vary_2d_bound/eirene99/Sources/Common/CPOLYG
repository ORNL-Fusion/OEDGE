*COMDECK CPOLYG
      PARAMETER (NCPLYG=N1STS*(10*N2NDPLG)+4,
     .           MCPLYG=2)
      COMMON /CPOLYG/
C NCPLYG, REAL
     R VPLX(N1STS,N2NDPLG),VPLY(N1STS,N2NDPLG),
     R VVTX(N1STS,N2NDPLG),VVTY(N1STS,N2NDPLG),
     R PLNX(N1STS,N2NDPLG),PLNY(N1STS,N2NDPLG),
     R BGL(N1STS,N2NDPLG),BGLP(N1STS,N2NDPLG),
     R PPLNX(N1STS,N2NDPLG),PPLNY(N1STS,N2NDPLG),
     R XPCOR,YPCOR,ZPCOR,PLREFL,
C MCPLYG, INTEGER
     I NRPLG,NPPLG
