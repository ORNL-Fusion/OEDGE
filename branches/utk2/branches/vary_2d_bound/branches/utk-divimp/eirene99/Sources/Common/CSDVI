*COMDECK CSDVI
      PARAMETER (NSDVI1=NSD*(NRAD+1)+
     P                 NSDW*(NLIMPS+1),
     P           NSDVI2=3*NCV*(NRAD+1)+
     P                 NCV*NHST,
     P           NSDVI=NSDVI1+NSDVI2,
     P           MSDVI=NSD*2+NSDW*2+NCV*2*2+NCV+9)
      COMMON /CSDVI/
C NSDVI, REAL
     R SIGMA(NSD,NRAD),SIGMAW(NSDW,NLIMPS),
     R SGMS(NSD),SGMWS(NSDW),
     R SIGMAC(0:2,NCV,NRAD),
     R SGMCS(0:2,NCV),
     R COV(NCV,NHST),
C MSDVI, INTEGER, NOT EQUIVALENCED
     I IIH(NSD),IGH(NSD),
     I IIHW(NSDW),IGHW(NSDW),
     I IIHC(2,NCV),IGHC(2,NCV),
     I ICOV(NCV),
     I NSIGI,NSIGVI,NSIGSI,NSIGCI,NCOV,NHIST,NCOVI,NSIGI_BGK,NSIGI_COP,
C SPEED UP OF SUBROUTINE STATIS
     I IMETCL(NRAD),ICLMT(NRAD),NCLMT,
     L LMETSP(N1MX+NSNV)
      LOGICAL LMETSP
