     .  SDVIA_BGK,EE_BGK,EES_BGK,
     .  NBGVI_STAT
      DIMENSION
     .  SIGMA_BGK(NBGV_STAT,NRADS),SGMS_BGK(NBGV_STAT)
      DIMENSION
     .  STV_BGK(NBGV_STAT,NRADS),STVS_BGK(NBGV_STAT)
      DIMENSION
     .  SDVIA_BGK (NBGV_STAT,NRADS),EE_BGK(NBGV_STAT,NRADS),
     .  EES_BGK(NBGV_STAT)
