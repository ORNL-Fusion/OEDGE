      ! -*-F90-*-
      integer,parameter :: n_cell_vertices = 4
      type type_cell
         integer :: index
         integer :: ik,ir
         integer :: sonnetik,sonnetir
         integer :: xpt
         
         integer :: nv
         real    :: rv(n_cell_vertices)
         real    :: zv(n_cell_vertices)
         real    :: rcen,zcen
         real    :: area
         real    :: vol

         real    :: bratio
         
         integer :: target_side
         integer :: bnd_side

         integer :: connect(n_cell_vertices)

         integer :: rzone,zzone

         integer :: map
         logical :: ignore

      end type type_cell
