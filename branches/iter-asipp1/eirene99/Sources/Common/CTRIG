*CDK CTRIG
      PARAMETER (NCTRIG=2*NKNOTS+3*3*NTRIS+4*3*NTRIS,
     .           MCTRIG=4*3*NTRIS+2)
      COMMON /CTRIG/
C  NCTRIG, REAL
     R               XTRIAN,YTRIAN,
     R               XECKE,XNCHBR,SEITE,
     R               VTRIX,VTRIY,PTRIX,PTRIY,
C  MCTRIG, INTEGER
     I               NECKE,NCHBAR,NSEITE,INMTI,
     I               NRKNOT,NTRII
      DIMENSION XTRIAN(NKNOTS),YTRIAN(NKNOTS),
     R     XECKE(3,NTRIS),XNCHBR(3,NTRIS),SEITE(3,NTRIS),
     R     VTRIX(3,NTRIS),VTRIY(3,NTRIS),PTRIX(3,NTRIS),PTRIY(3,NTRIS),
     I     NECKE(3,NTRIS),NCHBAR(3,NTRIS),NSEITE(3,NTRIS),
     I     INMTI(3,NTRIS)
