      INTEGER*4   IWORK           , LND         , MDIM        , MZE2D
     &        ,   LNDSP           , MZONE
      REAL*8      WORKSP          , TDUM        , XDUM        , YDUM
     &        ,   BUFFER
C
      PARAMETER ( IWORK = 600 , LND = IWORK , MDIM = 3000 , MZE2D = 2 )
